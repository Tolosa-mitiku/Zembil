# ==================== DATABASE ====================
# MongoDB Connection URI
# Local: mongodb://localhost:27017/zembil
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/zembil?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/zembil

# ==================== SERVER ====================
PORT=5000
NODE_ENV=development

# ==================== FIREBASE ====================
# Paste your entire Firebase service account JSON as a single line (no line breaks)
# Get from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"your-cert-url","universe_domain":"googleapis.com"}

# ==================== SECURITY (CRITICAL!) ====================
# Encryption key for sensitive data (64 character hex string)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate-with-crypto-randomBytes-32-hex-string-here

# Session secret for token signing (minimum 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=generate-with-crypto-randomBytes-32-base64-string-here

# ==================== CORS ====================
# Comma-separated list of allowed origins (no spaces)
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
# Production example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# ==================== FEATURE FLAGS ====================
ENABLE_CRON_JOBS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true
SECURITY_STRICT_MODE=false

# ==================== BUSINESS CONFIGURATION ====================
# Minimum payout amount (in cents/lowest currency unit)
PAYOUT_MIN_AMOUNT=100
# Platform commission percentage
PLATFORM_FEE_PERCENTAGE=10
# Currency code
CURRENCY=USD
# Tax rate percentage
TAX_RATE=0

# ==================== PAYMENT PROVIDERS (Optional) ====================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==================== EMAIL PROVIDER (Optional) ====================
# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Zembil Marketplace

# Mailgun (Alternative)
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES (Alternative)
# AWS_SES_ACCESS_KEY=your_aws_access_key
# AWS_SES_SECRET_KEY=your_aws_secret_key
# AWS_SES_REGION=us-east-1

# ==================== CLOUD STORAGE (Optional) ====================
# Cloudinary (Recommended for Vercel)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AWS S3 (Alternative)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_bucket_name
# AWS_REGION=us-east-1

# ==================== REDIS (Optional - for scaling) ====================
# Redis connection URL for distributed rate limiting and caching
# REDIS_URL=redis://localhost:6379
# Production Redis:
# REDIS_URL=redis://default:password@redis-host:6379

# ==================== SMS PROVIDER (Optional) ====================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ==================== ANALYTICS & MONITORING (Optional) ====================
# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==================== ADMIN SECURITY (Optional) ====================
# Comma-separated list of whitelisted IP addresses for admin access
# ADMIN_IP_WHITELIST=192.168.1.1,10.0.0.1

# ==================== MAINTENANCE MODE ====================
# Set to true to enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# ==================== SITE INFORMATION ====================
SITE_NAME=Zembil Marketplace
SITE_URL=http://localhost:3000
SUPPORT_EMAIL=support@zembil.com
SUPPORT_PHONE=+1234567890

# ==================== FILE UPLOAD LIMITS ====================
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=10

# ==================== RATE LIMITING ====================
# General API rate limit (requests per 15 minutes)
RATE_LIMIT_GENERAL=100
# Auth endpoints rate limit (requests per 15 minutes)
RATE_LIMIT_AUTH=5
# API endpoints rate limit (requests per minute)
RATE_LIMIT_API=60

# ==================== SESSION CONFIGURATION ====================
SESSION_EXPIRATION_DAYS=7
SESSION_REMEMBER_ME_DAYS=30
MAX_ACTIVE_SESSIONS=5